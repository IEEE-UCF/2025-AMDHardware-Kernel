menu "Minimal FPGA GPU (mgpu)"
config MGPU
    tristate "Minimal FPGA GPU driver (mgpu)"
    default m
    help
      Render-only FPGA GPU driver for bring-up and testing.

config MGPU_MISCDEV
    bool "Expose as /dev/mgpu0 misc device (MVP)"
    default y
    depends on MGPU
    help
      Use a misc char device for ioctls (fastest path).

config MGPU_SPI
    bool "SPI transport backend"
    default n
    depends on MGPU && SPI
endmenu
