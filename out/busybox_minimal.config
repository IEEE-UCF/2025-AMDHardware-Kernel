CONFIG_BUSYBOX=y
CONFIG_STATIC=y
# Large File Support (needed with musl on 32-bit where off_t is 64-bit)
CONFIG_LFS=y
# Shell
CONFIG_SH_IS_ASH=y
CONFIG_ASH=y
CONFIG_ASH_OPTIMIZE_FOR_SIZE=y
CONFIG_ASH_ECHO=y
CONFIG_FEATURE_SH_STANDALONE=y
CONFIG_CTTYHACK=y
# Core userland
CONFIG_LS=y
CONFIG_ECHO=y
CONFIG_CAT=y
CONFIG_DMESG=y
CONFIG_MOUNT=y
CONFIG_UMOUNT=y
CONFIG_MKDIR=y
CONFIG_MKNOD=y
CONFIG_UNAME=y
CONFIG_SLEEP=y
CONFIG_TRUE=y
CONFIG_FALSE=y
# Drop problematic applets
CONFIG_HWCLOCK=n
CONFIG_TC=n
# Disable syslog/logger to avoid prompts
CONFIG_SYSLOGD=n
CONFIG_KLOGD=n
CONFIG_LOGGER=n
CONFIG_LOGREAD=n
# No networking/tools by default to keep size small
CONFIG_NETWORKING=n
